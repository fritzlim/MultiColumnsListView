<?xml version="1.0" encoding="UTF-8"?>
<xam:XamCell xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:xam="clr-namespace:AppoMobi.Xam;assembly=MultiColumnsMonkeys"

            Margin="0.5"
            Spacing="0"
            
            VerticalOptions="FillAndExpand"

            BackgroundColor="White"

            x:Class="MultiColumnsMonkeys.Views.CellMonkey">



    <StackLayout Orientation="Horizontal" VerticalOptions="Start" Margin="6">

    <Image VerticalOptions="Start"
           x:Name="MainImage"
           BackgroundColor="WhiteSmoke"
           HeightRequest="66"
           WidthRequest="66"
           Aspect="AspectFill"
           Source="{Binding Image}"/>


    <StackLayout x:Name="MainStack"            
                 VerticalOptions="Start">

        <Label 
            x:Name="LabelTitle"
            HorizontalOptions="Fill"
            FontAttributes="Bold"
            Text="{Binding Text}"/>

        <Label 
            HorizontalOptions="Fill"
            Text="{Binding Location}" 
            x:Name="LabelLocation"/>

    </StackLayout>


</StackLayout>


    <Label        
           Margin="7,0,7,6"
           FontSize="Micro"
           Text="{Binding Description}"/>

    <ContentView VerticalOptions="Fill"/>

</xam:XamCell>